<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baby_rattle"
    android:orientation="vertical" >

   <TextView
        android:id="@+id/difficultyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Please select difficulty:"
        android:textSize="20sp" />

   <Spinner
       android:id="@+id/easynormalhard"
       android:layout_width="90dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_marginTop="20dp"
       android:entries="@array/difficultyOptions" />

   <EditText
       android:id="@+id/EditBabyName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_marginTop="50dp"
       android:ems="10"
       android:hint="Baby's Name"
       android:singleLine="true" >
  </EditText>
  
   <Button
       android:id="@+id/saveOptionsButton"
       android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/save"  />
   <Button
       android:id="@+id/cancelOptionsButton"
       android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/cancel" />

</LinearLayout>